<html>
    <head>
        <title><%= title %></title>
        <script src="https://kit.fontawesome.com/ef6cbe3f17.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="./CSS/home.css">
    </head>
    <body>
        <header><h1>TODO APP</h1></header>

<!-- user input form -->

        <form action="/add-item" method="POST">
            <div class="border">
                <label for="">DESCRIPTION</label>
                <br><br>
            <input type="text" name="description" placeholder="What do you need to do" required>
        </div>
        <div class="border" id="flex">
            <div>
            <label for="">CATEGORY</label><br><br>
            <select name="category" >
                <option value="personal">Personal</option>
                <option value="work">Work</option>
                <option value="school">School</option>
                <option value="cleaning">Cleaning</option>
                <option value="other">Other</option>
            </select>
        </div>
        <div>
            <label for="">DUE DATE</label><br><br>
            <input type="date" name="dueDate" placeholder="dd/mm/yyyy" required>
        </div>
        </div>
        <div class="button" id="add-button">
            <i class="fas fa-plus"></i>
            <button  type="submit">ADD TASK</button>
        </div>
        </form>

        <!-- form for selecting the item to delete -->
        
        <form action="/delete-item" method="POST">
            <div id="delete-button" class="button">
                <i class="fas fa-trash-alt"></i>
                <button  type="submit">DELETE</button>
            </div>

            <!-- list to display each entry from DB -->

            <ul class="list">
                <% for(let i of List) {%>
                    <li>
                        <div id="select-bar"><input type="checkbox" value="<%= i._id %>" name="checked"></div>
                        <div id="info">
                            <div style="font-size: larger;font-weight: bolder;"><%=i.description%></div>
                            <div><i class="far fa-calendar-alt"></i><%=i.dueDate%></div>
                    </div>
                        <div  style="color: black ;" class="category"><p><%=i.category%></p></div>
                        
                    </li>   
                    <% }%>
            </ul>

        </form>
        <script src="https://code.jquery.com/jquery-3.5.1.js" 
    integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/JS/home.js"></script>
    </body>
</html>